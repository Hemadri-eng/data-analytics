import pandas as pd
import numpy as np
import random
from datetime import datetime, timedelta

np.random.seed(7)
random.seed(7)

ROWS = 1000
now = datetime.now()

projects = [("e7a79aa9", "CompanyApp")]
apps = [
    ("app1aeda96dc5", "CompanyApp google (Play Store)", "android", "play_store"),
    ("app17b3eaa5d6", "CompanyApp (Apple) (App Store)", "iOS", "app_store"),
]

countries = ["AE","BE","CH","CI","CM","DE","FR","GB","IE","IN","IT","KE","KR",
             "MA","MU","NG","NO","PH","RE","SN","TH","US","ZA","ZM"]

locales = ["en-US", "fr-CA", "de-DE", "en-GB"]

products = ["product_monthly", "product_yearly"]
prices = {
    "product_monthly": 9,
    "product_yearly": 59
}

def epoch_ms(dt):
    return int(dt.timestamp() * 1000) if dt else None

rows = []

for _ in range(ROWS):
    project_id, project_name = random.choice(projects)
    app_id, app_name, platform, store = random.choice(apps)

    first_seen = now - timedelta(days=random.randint(5, 400))

    lifecycle = random.choices(
        ["trial_only", "paid"],
        weights=[0.3, 0.7]
    )[0]

    product = random.choice(products)
    price = prices[product]

    trial_start = None
    trial_end = None
    first_purchase_at = None
    last_payment_at = None 
    last_seen = None
    renewals = 0
    total_spent = 0
    has_trial = False 

    if lifecycle == "trial_only":
        trial_start = first_seen 
        trial_end = trial_start + timedelta(days=7)
        has_trial = True
        last_seen = min(trial_start + timedelta(days=random.randint(0, 7)), now)
        status = "expired"

    else: 
        has_trial = random.random() < 0.3
        
        if has_trial:
            trial_start = first_seen
            trial_end = trial_start + timedelta(days=7)
            first_purchase_at = trial_end
        else:
            first_purchase_at = first_seen + timedelta(days=random.randint(1, 7))
        first_purchase_at = min(first_purchase_at, now)
        renewal_period_days = 30 if "monthly" in product else 365
    
        days_since_purchase = (now - first_purchase_at).days
        max_possible_renewals = max(0, days_since_purchase // renewal_period_days)
        renewals = random.randint(0, max_possible_renewals)
        
        last_payment_at = first_purchase_at + timedelta(days=renewal_period_days * renewals)
        
        total_spent = round(price * (1 + renewals), 2)
        
        last_seen = min(last_payment_at + timedelta(days=random.randint(0, 3)), now)
        
        if (last_payment_at + timedelta(days=renewal_period_days)) > now:
            status = "active"
        else:
            status = random.choice(["expired", "cancelled"])
    if status == "active":
        renewal_period_days = 30 if "monthly" in product else 365
        latest_expiration_at = last_payment_at + timedelta(days=renewal_period_days)
    else:
        latest_expiration_at = last_payment_at if last_payment_at else trial_end


    base_country = random.choice(countries)
    store_country = base_country if random.random() < 0.8 else random.choice(countries)

    billing_issue = (
        epoch_ms(last_seen - timedelta(days=random.randint(1, 3)))
        if total_spent > 0 and random.random() < 0.05
        else "" 
    )
    
    rows.append({
        "project_id": project_id,
        "project_name": project_name,
        "app_id": app_id,
        "app_name": app_name,
        "first_seen_at": epoch_ms(first_seen),
        "last_seen_at": epoch_ms(last_seen),
        "last_seen_app_version": random.choice(["1.17.3","1.17.6","1.17.7"]),
        "last_seen_ip_country": base_country,
        "last_seen_platform": platform,
        "last_seen_platform_version": random.choice(["Version 20.1","Version 22.0","Version 17.4.1"]),
        "last_seen_sdk_version": random.choice(["5.36.0","5.41.0","5.39.0"]),
        "last_seen_locale": random.choice(locales),

        "price_experiment_id": "",
        "price_experiment_variant": "",
        "email": "",
        "phone_number": "",
        "media_source": "",
        "campaign": "",
        "ad_group": "",
        "ad": "",
        "keyword": "",
        "creative": "",
        "idfa": "",
        "idfv": "",
        "gps_ad_id": "",
        "custom_attributes": "",
        "has_made_sandbox_purchase": "f",
        "latest_entitlement": "",
        "latest_entitlements": "",
        "latest_product": product,
        "is_rc_promo": "FALSE",

        "first_purchase_at": epoch_ms(first_purchase_at),
        "trial_start_at": epoch_ms(trial_start),
        "trial_end_at": epoch_ms(trial_end),
        
        "most_recent_purchase_at": epoch_ms(last_payment_at) if last_payment_at else "",
        "most_recent_renewal_at": epoch_ms(last_payment_at) if renewals > 0 else "",
        
        "latest_expiration_at": epoch_ms(latest_expiration_at),
        "subscription_opt_out_at": "",
        "trial_opt_out_at": "",

        "total_renewals": renewals,
        "total_spent": total_spent,
        "latest_store": store,
        "latest_store_country": store_country,
        "latest_auto_renew_intent": "f",
        "all_purchased_product_ids": product,
        "most_recent_billing_issues_at": billing_issue,
        "status": status,
        "has_made_a_non_subscription_purchase": "f",
        
        "latest_offer": "Free Trial (" + product + ")" if (has_trial and lifecycle == "paid") or lifecycle == "trial_only" else "no_offer",
        "latest_offer_type": "|free_trial" if (has_trial and lifecycle == "paid") or lifecycle == "trial_only" else "",
        
        "latest_purchased_offering": "default",
        "latest_ownership_type": "PURCHASED",
        "app_user_id": f"$RCAnonymousID:{np.random.bytes(16).hex()}",
        "currency": "USD",
    })

df = pd.DataFrame(rows)

date_cols = ["first_seen_at", "last_seen_at", "first_purchase_at", 
             "trial_start_at", "trial_end_at", "most_recent_purchase_at", "latest_expiration_at"]

for col in date_cols:
    df[col] = pd.to_numeric(df[col], errors='coerce')

df.to_csv("revenuecat_generated_data.csv", index=False, float_format='%.0f')
